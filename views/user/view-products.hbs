
    <section class="products">
        <div class="container ">
            <div class="row p-2">
                {{#each products}}
                <div class="col-md-3 pb-2">
                    <div class="card" style="width:100%;height:16rem">
                        <img class="card-img-top" src="/images/{{this._id}}.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-text">{{this.name}}</h5>           
                            <p class="card-text">${{this.Price}}</p>
                            {{!-- <p class="card-text">{{this.description}}</p> --}}
                          
                            <button  onClick="addToCart('{{this._id}}')"class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>

                {{/each}}
            </div>
        </div>
    </section>
