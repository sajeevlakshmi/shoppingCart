<section class="order-product-details">
    <div class="container allproducts">
    <div class="row p-2">
        <a href="/admin/add-products" class="btn ">Add Products</a>

    </div>
        <div class="table-responsive">
  <table id="products_table" class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      
      <th scope="col">category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
       <th scope="col">Image</th>
       <th scope="col">options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
  
      <td>{{this.Price}}</td>
      <td>{{this.description}}</td>
      <td><img  style="width:50px; height:50px"src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-products/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-products/{{this._id}}" class="btn btn-danger"onClick=" return confirm('Are you sure to delete{{this.name}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
    </div>
</section>
<script>
  $( function () {
    $('#products_table').DataTable();
} );
</script>